{
  "name": "rest-api",
  "version": "1.0.0",
  "description": "Node.js project structure using Express and Mongoose",
  "scripts": {
    "start": "node src/bin/www",
    "test": "mocha  src/test/index.js",
    "coverage": "./node_modules/.bin/nyc npm run test",
    "report": "./node_modules/.bin/nyc --reporter=html mocha src/test/index.js",
    "prettier": "prettier --write --ignore-path .gitignore .",
    "lint:fix": "eslint --ignore-path .gitignore . --fix",
    "lint": "eslint --ignore-path .gitignore ."
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/shradha001/node-rest-api.git"
  },
  "keywords": [
    "mongodb",
    "node.js",
    "mocha",
    "istanbul",
    "boilerplate",
    "express",
    "mongoose",
    "REST",
    "api",
    "structure"
  ],
  "author": "shradha mallik",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/shradha001/node-rest-api/issues"
  },
  "homepage": "https://github.com/shradha001/node-rest-api#readme",
  "dependencies": {
    "celebrate": "^10.0.1",
    "cors": "^2.8.5",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.0.0",
    "helmet": "^3.21.0",
    "lodash": "^4.17.15",
    "mongoose": "^5.6.13",
    "morgan": "^1.9.1",
    "swagger-ui-express": "^4.0.7",
    "uuid": "^3.3.3",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.3.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-mocha": "^6.1.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "mocha": "^6.2.0",
    "nyc": "^14.1.1",
    "prettier": "1.19.1",
    "supertest": "^4.0.2"
  }
}